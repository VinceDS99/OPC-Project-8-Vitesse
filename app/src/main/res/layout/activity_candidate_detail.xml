<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Fond de la barre de titre -->
        <View
            android:id="@+id/vTitleBackground"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Barre de titre avec actions -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:src="@drawable/arrow_left_icon"
            android:contentDescription="@string/back"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCandidateName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toStartOf="@id/ivFavorite"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="John DOE" />

        <!-- Icône favoris -->
        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:src="@drawable/empty_star_icon"
            android:contentDescription="@string/add_to_favorites"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toStartOf="@id/ivEdit"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icône modifier -->
        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:src="@drawable/pen_icon"
            android:contentDescription="@string/edit"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toStartOf="@id/ivDelete"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icône supprimer -->
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:src="@drawable/trash_icon"
            android:contentDescription="@string/delete"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Photo de profil -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfilePhoto"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vTitleBackground"
            app:layout_constraintWidth_percent="0.90">

            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:focusable="true"
                android:adjustViewBounds="true"
                android:src="@drawable/default_profile_picture"
                android:contentDescription="@string/app_name" />

        </androidx.cardview.widget.CardView>

        <!-- Actions : Téléphone, SMS, Email -->
        <LinearLayout
            android:id="@+id/actionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cvProfilePhoto">

            <!-- Action Téléphone -->
            <LinearLayout
                android:id="@+id/llPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/margin_medium"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="@color/secondary_variant"
                    android:background="@drawable/card_border"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone_icon"
                        app:tint="@color/on_primary"
                        android:contentDescription="@string/phone_action" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/phone_action"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!-- Action SMS -->


            <LinearLayout
                android:id="@+id/llSms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="@color/secondary_variant"
                    app:strokeWidth="2dp"
                    android:background="@drawable/card_border">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/sms_action"
                        android:src="@drawable/sms_icon"
                        app:tint="@color/on_primary" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/sms_action"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>

            <!-- Action Email -->
            <LinearLayout
                android:id="@+id/llEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/margin_medium"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="@color/secondary_variant"
                    app:strokeWidth="2dp"
                    android:background="@drawable/card_border">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/mail_icon"
                        app:tint="@color/on_primary"
                        android:contentDescription="@string/email_action" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/email_action"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <!-- Section À propos -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvAbout"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_border"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/actionsLayout"
            app:cardBackgroundColor="@color/primary_variant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDateOfBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@android:color/black"
                        tools:text="15/03/1990 (34 ans)" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="@string/birthday"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Section Prétentions salariales -->
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/primary_variant"
            android:id="@+id/cvSalary"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cvAbout"
            app:strokeColor="@color/surface"
            app:strokeWidth="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expected_salary_title"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvSalaryEuro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/black"
                    tools:text="45 000 €" />

                <TextView
                    android:id="@+id/tvSalaryPound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/darker_gray"
                    tools:text="£ 38 475,00" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Section Notes -->
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/primary_variant"
            android:id="@+id/cvNotes"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cvSalary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="@color/surface"
            app:strokeWidth="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notes_title"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/black"
                    tools:text="Développeur full-stack avec 5 ans d'expérience en Java et Kotlin. Maîtrise de Spring Boot et Android. Passionné par les nouvelles technologies." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>